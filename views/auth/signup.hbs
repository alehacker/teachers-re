{{!-- views/auth/signup.hbs --}}

<div id="form">
  <h2>Signup</h2>
  <form action="/users/signup" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Email
      <input type="string" name="email" placeholder="rockstar@ironhack.com" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <label> Grade You Teach
      <input type="text" name="grade" />
    </label>

    <label> Subject
      <input type="text" name="subject"/>
    </label>

    <button type="submit">Create account</button>

    {{!-- error message will be added here --}}
  </form>

    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p class="error">
    {{/if}}
</div>
