{{!-- views/auth/signup.hbs --}}

<div id="form">
  <h2>Signup</h2>
  <form action="/users/signup" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Email
      <input type="string" name="email" placeholder="rockstar@ironhack.com" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <label> Grade You Teach
        <select name="grade" id="grade">
            <option value="">Select Your Grade</option>
            <option value="Kinder">Kinder</option>
            <option value="1st">1st Grade</option>
            <option value="2nd">2nd Grade</option>
            <option value="3rd">3rd Grade</option>
            <option value="4th">4th Grade</option>
            <option value="5th">5th Grade</option>  
        </select>
    </label>
    

    <label> Subject
        <select name="subject" id="grade">
            <option value="">Select Your Subject</option>
            <option value="Art">Art</option>
            <option value="Math">Math</option>
            <option value="Music">Music</option>
            <option value="Reading">Reading</option>
            <option value="Science">Science</option>
            <option value="Social Studies">Spanish</option>  
        </select>
    </label>
    

    <button type="submit">Create account</button>

    {{!-- error message will be added here --}}
  </form>

    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p class="error">
    {{/if}}
</div>
